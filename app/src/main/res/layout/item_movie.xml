<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/imgCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_placeholder" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_shadow"></View>

    <TextView
        android:visibility="gone"
        android:padding="@dimen/_2sdp"
        android:id="@+id/txtTitle"
        android:fontFamily="@font/nunito_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtRating"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="Title"
        android:textColor="@color/color8"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txtRating"
        android:fontFamily="@font/nunito_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:text="0.0"
        android:textColor="@color/color8"
        android:textSize="@dimen/_8sdp" />

    <ImageView
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_alignBottom="@+id/txtRating"
        android:layout_alignTop="@+id/txtRating"
        android:layout_toRightOf="@+id/txtRating"
        android:src="@drawable/icon_star" />

    <TextView
        android:id="@+id/txtYear"
        android:fontFamily="@font/nunito_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="0000"
        android:textColor="@color/color8"
        android:textSize="@dimen/_8sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_border"></View>

</RelativeLayout>